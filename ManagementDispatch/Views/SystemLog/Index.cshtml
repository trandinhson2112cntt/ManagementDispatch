
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="font-size:30px">Nhật ký hệ thống</p>
<hr />
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example-log">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Ngày giờ</th>
                        <th>Tên nhân viên</th>
                        <th>Nội dung</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.IDNhatKy</td>
                        <td class="center">@item.NgayGio</td>

                        <td class="center">@item.NhanVien.HoTen</td>
                        <td class="center">@item.NoiDungNhatKy</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.panel -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example-log').DataTable({
            responsive: true
        });
    });
</script>


