@model ManagementDispatch.Models.Statistical
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Số công văn đến: @Model.CountTextTo</p>
<br />
<p>Số công văn đi: @Model.CountTextGo</p>
<br />
<p class="">Tổng số công văn: @Model.SUM</p>
<p style="font-size:30px">Thống kê số lượng công văn</p>

@using (Html.BeginForm("CountText", "Statistical", FormMethod.Post))
{
    <label>Từ ngày:</label>
    <input type="date" name="inputDayFirst" />
    <label>Đến ngày:</label>
    <input type="date" name="inputDayLast" />
    <input type="submit" value="Thống kê"/>
}

