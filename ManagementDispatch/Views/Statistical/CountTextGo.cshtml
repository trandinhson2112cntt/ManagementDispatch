@model IEnumerable<ManagementDispatch.Models.CongVanDi>

<div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
        <span class="info-box-icon bg-red"><i class="fa fa-files-o"></i></span>

        <div class="info-box-content">
            <span class="info-box-text">Số công văn đi </span>
            <span class="info-box-number">@Model.Count()</span>
        </div>
        <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example3">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Ngày gửi</th>
                            <th>Số CV</th>
                            <th>Loại CV</th>
                            <th>Nội dung CV</th>
                            <th>Phòng ban</th>
                            <th>Người gửi</th>
                            <th>Nơi gửi</th>
                            <th>File</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.STT</td>
                                <td class="center">@item.NgayGui.ToString(string.Format("dd/MM/yyyy"))</td>
                                <td class="center">@item.IDCongVanDi</td>
                                <td class="center">@item.LoaiCongVan.TenLoaiCongVan</td>
                                <td class="center">@item.NoiDungCongViec</td>
                                <td>@item.PhongBan.TenPhongBan</td>
                                <td class="center">@item.TenNguoiGui</td>
                                <td class="center">@item.DonVi.TenDonVi</td>
                                <td class="center">@Html.ActionLink("Download", "Download", new { fileName = item.File })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example3').DataTable({
            responsive: true
        });
    });
</script>


