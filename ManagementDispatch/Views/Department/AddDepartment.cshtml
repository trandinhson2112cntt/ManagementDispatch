
@{
                /**/

                ViewBag.Title = "Thêm phòng ban";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-solid">
    <div class="box-body">
        <h1>Thêm mới phòng ban</h1>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewBag.Validate
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <form role="form">
                                        <div class="form-group">
                                            <label>Tên phòng ban</label>
                                            <input class="form-control" placeholder="Nhập tên" name="InputName" id="InputName">
                                            <label>Ghi chú</label>
                                            <input class="form-control" placeholder="Nhập ghi chú" name="InputInfo" id="InputInfo">
                                        </div>
                                        <button type="submit" class="btn btn-default">Thêm mới</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
