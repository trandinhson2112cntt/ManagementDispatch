@model IEnumerable<ManagementDispatch.Models.PhongBan>
@{
    ViewBag.Title = "Các phòng ban quản lý";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/TemplateAdmin/controller/departmentController.js"></script>
}

<p style="font-size:30px">Các phòng ban quản lý</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Thêm mới", "AddDepartment", "Admin", htmlAttributes: new { @class = "btn btn-primary" })
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tên phòng ban</th>
                            <th>Ghi chú</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="rpw_@item.IDPhongBan">
                                <td class="center">@item.TenPhongBan</td>
                                <td class="center">@item.GhiChu</td>
                                <td><a href="#" class="abc" data-id="@item.IDPhongBan">@((bool)item.isDelete ? "Đang sử dụng" : "Đã khóa")</a></td>
                                <td class="center">
                                    @Html.ActionLink("Sửa", "EditDepartment", new { id = item.IDPhongBan })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>