@model IEnumerable<ManagementDispatch.Models.CongVanDen>
@{
    ViewBag.Title = "Các công văn đến";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p style="font-size:30px">Các công văn đến</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Thêm mới", "AddTextTo")
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Số công văn</th>
                            <th>Loại công văn</th>
                            <th>Nội dung</th>
                            <th>Ngày gửi</th>
                            <th>Ngày nhận</th>
                            <th>Người gửi</th>
                            <th>Người nhận</th>
                            <th>Loại phòng ban</th>
                            <th>Đơn vị gửi</th>
                            <th>Đơn vị nhận</th>
                            <th>File</th>
                            <th>Ảnh Scan</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="center">@item.IDCongVanDen</td>
                            <td class="center">@item.LoaiCongVan.TenLoaiCongVan</td>
                            <td class="center">@item.NoiDung</td>
                            <td class="center">@item.NgayGui</td>
                            <td class="center">@item.NgayNhan</td>
                            <td class="center">@item.TenNguoiGui</td>
                            <td class="center">@item.TenNguoiNhan</td>
                            <td class="center">@item.PhongBan.TenPhongBan</td>
                            <td class="center">@item.DonVi.TenDonVi</td>
                            <td class="center">@item.DonVi1.TenDonVi</td>
                            <td class="center">@Html.ActionLink("Download","Download",new { fileName = item.File })</td>
                            <td class="center"> <img src="@Url.Content("~/"+item.AnhScan)" width="60px"></td>
                            <td class="center">
                                @Html.ActionLink("Sửa", "EditTextTo", new { id = item.IDCongVanDen })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

