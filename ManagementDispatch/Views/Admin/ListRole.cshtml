@model IEnumerable<ManagementDispatch.Models.BlogBusiness>
@{
    ViewBag.Title = "Danh sách quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/TemplateAdmin/controller/admincontroller.js"></script>
}

<p style="font-size:30px">Danh sách quyền</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Cập nhập", "UpdateBusiness")
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Mã quyền</th>
                            <th>Tên quyền</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">@item.BusinessId</td>
                                <td class="center">@item.BusinessName</td>
                                <td class="center">
                                    @Html.ActionLink("Sửa", "EditBlogBusiness", new { id = item.BusinessId }) |
                                    @Html.ActionLink("DS quyền hạn", "ListPermission", new { id = item.BusinessId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>