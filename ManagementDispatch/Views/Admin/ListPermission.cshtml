@model IEnumerable<ManagementDispatch.Models.BlogPermission>
@{
    ViewBag.Title = "Danh sách quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="font-size:30px">Danh sách quyền</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Cập nhập", "UpdateBusiness")
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tên quyền</th>
                            <th>Mô tả</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">@item.PermissionName</td>
                                <td class="center">@item.Description</td>
                                <td class="center">
                                    @Html.ActionLink("Sửa", "EditBlogPermission", new { id = item.PermissionId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>