@model IEnumerable<ManagementDispatch.Models.NhanVien>
@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/TemplateAdmin/controller/admincontroller.js"></script>
}

<p style="font-size:30px">Danh sách nhân viên</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Thêm mới", "AddAgency")
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Họ tên</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>Ngày sinh</th>
                            <th>Số điện thoại</th>
                            <th>Phòng ban</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="row_@item.IDNhanVien">
                            <td class="center">@item.HoTen</td>
                            <td class="center">@item.Username</td>
                            <td class="center">@item.Password</td>
                            <td class="center">@item.Email</td>
                            <td class="center">@item.NgaySinh.ToString(string.Format("dd/MM/yyyy"))</td>
                            <td class="center">@item.SDT</td>
                            <td class="center">@item.PhongBan.TenPhongBan</td>
                            <td><a href="#" class="abc" data-id="@item.IDNhanVien">@((bool)item.Lock ? "Đang sử dụng" : "Đã khóa")</a></td>
                            <td class="center">
                                @Html.ActionLink("Sửa", "EditAdmin", new { id = item.IDNhanVien })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>