    <script src="~/TemplateAdmin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/TemplateAdmin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/TemplateAdmin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                destroy: true,
                responsive: true
            });
        });
    </script>
