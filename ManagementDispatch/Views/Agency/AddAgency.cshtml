
@{
    ViewBag.Title = "Thêm đơn vị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="font-size:30px">Thêm mới đơn vị</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewBag.Validate
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("AddAgency", "Agency", FormMethod.Post))
                        {
                        @Html.AntiForgeryToken()

                        <form role="form">
                            <div class="form-group">
                                <label>Tên đơn vị</label>
                                <input class="form-control" placeholder="Nhập tên" name="InputName" id="InputName">
                                <label>Thông tin đơn vị</label>
                                <input class="form-control" placeholder="Nhập thông tin" name="InputInfo" id="InputInfo">
                            </div>
                            <button type="submit" class="btn btn-default">Thêm mới</button>
                        </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

