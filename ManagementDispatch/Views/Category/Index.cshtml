@model IEnumerable<ManagementDispatch.Models.LoaiCongVan>
@{
    ViewBag.Title = "Các loại công văn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/TemplateAdmin/controller/categoryController.js"></script>
}

    <p style="font-size:30px">Các loại công văn</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Thêm mới", "AddCategory")
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Loại công văn</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="rpw_@item.IDLoaiCongVan">
                                <td class="center">@item.TenLoaiCongVan</td>
                                <td><a href="#" class="abc" data-id="@item.IDLoaiCongVan">@((bool)item.isDelete ? "Đang sử dụng" : "Đã khóa")</a></td>
                                <td class="center">
                                    @Html.ActionLink("Sửa", "EditCategory", new { id = item.IDLoaiCongVan })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>