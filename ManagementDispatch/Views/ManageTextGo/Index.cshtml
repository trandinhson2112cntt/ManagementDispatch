@model IEnumerable<ManagementDispatch.Models.CongVanDi>
@{
    ViewBag.Title = "Các công văn đi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p style="font-size:30px">Các công văn đi</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <p>
                @Html.ActionLink("Thêm mới", "AddTextGo")
            </p>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Số công văn</th>
                            <th>Loại công văn</th>
                            <th>Đơn vị gửi</th>
                            <th>Đơn vị nhận</th>
                            <th>Người gửi</th>
                            <th>Số công văn đến</th>
                            <th>Nội dung công việc</th>
                            <th>Ngày gửi</th>
                            <th>Thời hạn hoàn thành</th>
                            <th>File</th>
                            <th>Ảnh Scan</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">@item.IDCongVanDi</td>
                                <td class="center">@item.LoaiCongVan.TenLoaiCongVan</td>
                                <td class="center">@item.DonVi.TenDonVi</td>
                                <td class="center">@item.DonVi1.TenDonVi</td>
                                <td class="center">@item.TenNguoiGui</td>
                                <td class="center">@item.IDCongVanDen</td>
                                <td class="center">@item.NoiDungCongViec</td>
                                <td class="center">@item.NgayGui</td>
                                <td class="center">@item.ThoiHanHoanThanh</td>
                                <td class="center">@Html.ActionLink("Download", "Download", new { fileName = item.File })</td>
                                <td class="center"> <img src="@Url.Content("~/"+item.AnhScan)" width="60px"></td>
                                <td class="center">
                                    @Html.ActionLink("Sửa", "EditTextGo", new { id = item.IDCongVanDi })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

